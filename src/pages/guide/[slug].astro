---
import Layout from '../../layouts/Layout.astro';
import fs from 'node:fs';
import path from 'node:path';

// Get all guide files
const guidesDir = path.join(process.cwd(), 'src/data/guides');
const guideFiles = fs.readdirSync(guidesDir).filter(f => f.endsWith('.json'));

export function getStaticPaths() {
  const guidesDir = path.join(process.cwd(), 'src/data/guides');
  const guideFiles = fs.readdirSync(guidesDir).filter(f => f.endsWith('.json'));
  
  return guideFiles.map((file) => {
    const slug = file.replace('.json', '');
    const guide = JSON.parse(fs.readFileSync(path.join(guidesDir, file), 'utf-8'));
    return {
      params: { slug },
      props: { guide, slug }
    };
  });
}

const { guide, slug } = Astro.props;

const difficultyColors = {
  'Easy': 'bg-emerald-100 text-emerald-700 border-emerald-200',
  'Medium': 'bg-amber-100 text-amber-700 border-amber-200',
  'Advanced': 'bg-red-100 text-red-700 border-red-200'
};

const costColors = {
  'Free': 'bg-emerald-100 text-emerald-700',
  'Freemium': 'bg-sky-100 text-sky-700',
  'Paid': 'bg-orange-100 text-orange-700'
};
---

<Layout title={`${guide.title} | Setup Guide`} description={guide.description}>
  <main class="max-w-3xl mx-auto px-6 py-12">
    
    <!-- Back Link -->
    <a href="/guides" class="inline-flex items-center text-paper-200/60 hover:text-cyan-400 mb-8 transition-colors">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Guides
    </a>

    <!-- Header -->
    <div class="mb-8">
      <div class="flex flex-wrap gap-3 mb-4">
        <span class={`text-sm px-3 py-1 rounded-full border ${difficultyColors[guide.difficulty]}`}>
          {guide.difficulty}
        </span>
        <span class={`text-sm px-3 py-1 rounded-full ${costColors[guide.costType]}`}>
          {guide.cost}
        </span>
        <span class="text-sm px-3 py-1 rounded-full bg-navy-800 text-paper-200/70">
          ‚è±Ô∏è {guide.time}
        </span>
      </div>
      
      <h1 class="text-3xl md:text-4xl font-extrabold mb-4 text-paper-100">
        {guide.title}
      </h1>
      <p class="text-xl text-paper-200/70">
        {guide.description}
      </p>
    </div>

    <!-- What You'll Need -->
    <div class="paper-card p-6 mb-8">
      <h2 class="font-semibold text-lg mb-4 flex items-center gap-2 text-navy-900">
        <span>üìã</span> What You'll Need
      </h2>
      <ul class="space-y-2">
        {guide.requirements.map((req) => (
          <li class="flex items-center gap-3 text-navy-700">
            <span class="text-emerald-600">‚úì</span>
            {req}
          </li>
        ))}
      </ul>
    </div>

    <!-- Steps -->
    <div class="mb-12">
      <h2 class="text-2xl font-bold mb-6 text-paper-100">Steps</h2>
      
      <div class="space-y-6">
        {guide.steps.map((step, index) => (
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-10 h-10 bg-cyan-500 rounded-full flex items-center justify-center font-bold text-lg text-navy-900">
              {index + 1}
            </div>
            <div class="flex-1 pt-1">
              <h3 class="font-semibold text-lg mb-2 text-paper-100">{step.title}</h3>
              <p class="text-paper-200/70 mb-3">{step.description}</p>
              {step.substeps && (
                <ul class="space-y-2 ml-4">
                  {step.substeps.map((sub) => (
                    <li class="text-paper-200/60 flex items-start gap-2">
                      <span class="text-cyan-400 mt-1">‚Üí</span>
                      {sub}
                    </li>
                  ))}
                </ul>
              )}
              {step.tip && (
                <div class="mt-3 bg-cyan-500/10 border border-cyan-500/20 rounded-lg p-3 text-sm text-cyan-300">
                  üí° <strong>Tip:</strong> {step.tip}
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Success -->
    <div class="bg-emerald-500/10 border border-emerald-500/20 rounded-xl p-6 mb-8">
      <h2 class="font-semibold text-lg mb-2 text-emerald-400 flex items-center gap-2">
        <span>‚úÖ</span> You're Done!
      </h2>
      <p class="text-paper-200/80">{guide.successMessage}</p>
    </div>

    <!-- Pro Tips -->
    {guide.proTips && guide.proTips.length > 0 && (
      <div class="dark-card p-6 mb-8">
        <h2 class="font-semibold text-lg mb-4 flex items-center gap-2 text-paper-100">
          <span>üí°</span> Pro Tips
        </h2>
        <ul class="space-y-3">
          {guide.proTips.map((tip) => (
            <li class="text-paper-200/70 flex items-start gap-3">
              <span class="text-cyan-400">‚Ä¢</span>
              {tip}
            </li>
          ))}
        </ul>
      </div>
    )}

    <!-- Share -->
    <div class="text-center pt-8 border-t border-navy-800/50">
      <p class="text-paper-200/50">
        Found this helpful? 
        <button 
          onclick={`navigator.share ? navigator.share({title: '${guide.title}', url: window.location.href}) : navigator.clipboard.writeText(window.location.href).then(() => alert('Link copied!'))`}
          class="text-cyan-400 hover:underline"
        >
          Share this guide
        </button>
      </p>
    </div>

  </main>
</Layout>
