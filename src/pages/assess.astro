---
import Layout from '../layouts/Layout.astro';
import trades from '../data/trades.json';
import baseChecklist from '../data/checklists/_base.json';
import tradeSpecific from '../data/checklists/trade-specific.json';
import { Loader2, ChevronLeft } from '@lucide/astro'

// Pass all data to client for dynamic rendering
const allTrades = trades.trades;
const allTradeSpecific = tradeSpecific;
const baseCategories = baseChecklist.categories;

// Lucide icon SVGs for client-side rendering (as inline SVG strings)
const categoryIcons = {
  marketing: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 11 18-5v12L3 14v-3z"/><path d="M11.6 16.8a3 3 0 1 1-5.8-1.6"/></svg>',
  sales: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" x2="12" y1="2" y2="22"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>',
  admin: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="8" height="4" x="8" y="2" rx="1" ry="1"/><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><path d="M12 11h4"/><path d="M12 16h4"/><path d="M8 11h.01"/><path d="M8 16h.01"/></svg>',
  operations: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>',
  'customer-service': '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>',
  advanced: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/><path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/><path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/><path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/></svg>'
};
---

<Layout title="Business Assessment | AI Automation">
  <main class="max-w-4xl mx-auto px-6 py-12">
    
    <!-- Header -->
    <div class="mb-8">
      <a href="/" class="inline-flex items-center text-paper-200/60 hover:text-cyan-400 mb-4 transition-colors">
        <ChevronLeft class="w-4 h-4 mr-1" />
        Start Over
      </a>
      
      <div class="flex items-center gap-4 mb-4">
        <span id="trade-icon" class="text-5xl">⏳</span>
        <div>
          <h1 id="trade-title" class="text-3xl font-extrabold text-paper-100">Loading Assessment...</h1>
          <p class="text-paper-200/60">Answer Yes or No for each item</p>
        </div>
      </div>
    </div>

    <!-- Progress Bar -->
    <div class="dark-card p-4 mb-8 sticky top-16 z-10">
      <div class="flex items-center justify-between mb-2">
        <span class="text-sm text-paper-200/60">Questions Answered</span>
        <span class="text-sm font-semibold text-paper-100"><span id="answered-count">0</span> / <span id="total-items">0</span></span>
      </div>
      <div class="w-full bg-navy-800 rounded-full h-3">
        <div id="progress-bar" class="progress-cyan h-3 rounded-full transition-all duration-300" style="width: 0%"></div>
      </div>
    </div>

    <!-- Checklist Form (rendered by JS) -->
    <form id="assessment-form" class="space-y-8">
      <input type="hidden" id="trade-input" name="trade" value="" />
      <div id="checklist-container">
        <!-- Categories will be rendered here by JavaScript -->
        <div class="text-center py-12 text-paper-200/60">
          <Loader2 class="w-8 h-8 animate-spin mx-auto mb-4 text-cyan-400" />
          Loading checklist...
        </div>
      </div>

      <!-- Submit Button -->
      <div class="sticky bottom-4 z-10">
        <button 
          type="submit"
          id="submit-btn"
          disabled
          class="w-full btn-cta text-lg py-4 rounded-xl disabled:bg-navy-700 disabled:cursor-not-allowed shadow-lg disabled:shadow-none"
        >
          See My Results →
        </button>
        <p id="submit-hint" class="text-center text-paper-200/50 text-sm mt-2">Answer all questions to continue</p>
      </div>
    </form>

  </main>

  <script define:vars={{ allTrades, baseCategories, allTradeSpecific, categoryIcons }}>
    // Get trade from URL query string (client-side)
    const urlParams = new URLSearchParams(window.location.search);
    const tradeId = urlParams.get('trade') || 'plumbing';
    const trade = allTrades.find(t => t.id === tradeId) || allTrades[0];

    // Category icon mapping
    const catIconMap = {
      'marketing': categoryIcons.marketing,
      'sales': categoryIcons.sales,
      'admin': categoryIcons.admin,
      'operations': categoryIcons.operations,
      'customer-service': categoryIcons['customer-service'],
      'advanced': categoryIcons.advanced
    };

    // Category name mapping for display
    const catNameMap = {
      'marketing': 'Marketing',
      'sales': 'Sales', 
      'admin': 'Admin & Finance',
      'operations': 'Operations',
      'customer-service': 'Customer Experience',
      'advanced': 'Advanced (Cutting Edge)'
    };

    // Merge base checklist with trade-specific items
    function getFullChecklist(tradeId) {
      const checklist = JSON.parse(JSON.stringify(baseCategories));
      
      const specific = allTradeSpecific[tradeId];
      if (specific) {
        specific.forEach(addition => {
          const category = checklist.find(c => c.id === addition.category);
          if (category) {
            category.items.push(...addition.items);
          }
        });
      }
      
      return checklist;
    }

    const checklist = getFullChecklist(tradeId);
    const totalItems = checklist.reduce((sum, cat) => sum + cat.items.length, 0);
    const totalWeight = checklist.reduce((sum, cat) => 
      sum + cat.items.reduce((s, item) => s + item.weight, 0), 0);

    // Track answers: { itemId: 'yes' | 'no' | null }
    const answers = {};
    checklist.forEach(cat => cat.items.forEach(item => answers[item.id] = null));

    // Update page title and header
    document.title = `${trade.name} Business Assessment | AI Automation`;
    document.getElementById('trade-icon').textContent = trade.icon;
    document.getElementById('trade-title').textContent = `${trade.name} Business Assessment`;
    document.getElementById('trade-input').value = tradeId;
    document.getElementById('total-items').textContent = totalItems;

    // Render checklist
    function renderChecklist() {
      const container = document.getElementById('checklist-container');
      
      const html = checklist.map(category => `
        <section class="paper-card p-6">
          <h2 class="text-xl font-bold mb-6 flex items-center gap-3 text-navy-900">
            <span class="w-6 h-6 text-navy-700">${catIconMap[category.id] || ''}</span>
            ${catNameMap[category.id] || category.name}
            <span class="text-sm font-normal text-navy-500">(${category.items.length} items)</span>
          </h2>
          
          <div class="space-y-4">
            ${category.items.map(item => `
              <div class="p-4 rounded-lg border-2 border-navy-200 bg-white transition-colors" data-item="${item.id}">
                <div class="flex items-start justify-between gap-4 mb-3">
                  <div class="flex-1">
                    <div class="flex items-start gap-3">
                      <span class="font-medium text-navy-900">
                        ${item.text}
                      </span>
                      <span class="flex-shrink-0 text-xs px-2 py-1 rounded ${
                        item.weight === 3 ? 'bg-red-100 text-red-700' :
                        item.weight === 2 ? 'bg-amber-100 text-amber-700' :
                        'bg-green-100 text-green-700'
                      }">
                        ${item.weight === 3 ? 'Critical' : item.weight === 2 ? 'Important' : 'Nice to have'}
                      </span>
                    </div>
                    <p class="text-navy-600 text-sm mt-1">${item.why}</p>
                  </div>
                </div>
                <div class="flex gap-2">
                  <button 
                    type="button"
                    data-item="${item.id}"
                    data-answer="yes"
                    data-weight="${item.weight}"
                    class="yes-btn flex-1 py-2 px-4 rounded-lg border-2 border-navy-200 text-navy-500 font-medium transition-all hover:border-emerald-500 hover:text-emerald-600 hover:bg-emerald-50"
                  >
                    ✓ Yes
                  </button>
                  <button 
                    type="button"
                    data-item="${item.id}"
                    data-answer="no"
                    data-weight="${item.weight}"
                    class="no-btn flex-1 py-2 px-4 rounded-lg border-2 border-navy-200 text-navy-500 font-medium transition-all hover:border-red-400 hover:text-red-500 hover:bg-red-50"
                  >
                    ✗ No
                  </button>
                </div>
              </div>
            `).join('')}
          </div>
        </section>
      `).join('');
      
      container.innerHTML = html;
      
      // Attach event listeners to buttons
      container.querySelectorAll('button[data-answer]').forEach(btn => {
        btn.addEventListener('click', handleAnswer);
      });
    }

    function handleAnswer(e) {
      const btn = e.currentTarget;
      const itemId = btn.dataset.item;
      const answer = btn.dataset.answer;
      
      // Update answer state
      answers[itemId] = answer;
      
      // Update button styles
      const itemContainer = document.querySelector(`[data-item="${itemId}"]`);
      const yesBtn = itemContainer.querySelector('.yes-btn');
      const noBtn = itemContainer.querySelector('.no-btn');
      
      // Reset both buttons
      yesBtn.className = 'yes-btn flex-1 py-2 px-4 rounded-lg border-2 font-medium transition-all';
      noBtn.className = 'no-btn flex-1 py-2 px-4 rounded-lg border-2 font-medium transition-all';
      
      if (answer === 'yes') {
        yesBtn.className += ' border-emerald-500 bg-emerald-100 text-emerald-700';
        noBtn.className += ' border-navy-200 text-navy-400 hover:border-red-400 hover:text-red-500 hover:bg-red-50';
        itemContainer.className = 'p-4 rounded-lg border-2 border-emerald-300 bg-emerald-50 transition-colors';
      } else {
        noBtn.className += ' border-red-400 bg-red-100 text-red-700';
        yesBtn.className += ' border-navy-200 text-navy-400 hover:border-emerald-500 hover:text-emerald-600 hover:bg-emerald-50';
        itemContainer.className = 'p-4 rounded-lg border-2 border-navy-200 bg-navy-50 transition-colors';
      }
      
      updateProgress();
    }

    // Track progress
    const progressBar = document.getElementById('progress-bar');
    const answeredCountEl = document.getElementById('answered-count');
    const submitBtn = document.getElementById('submit-btn');
    const submitHint = document.getElementById('submit-hint');

    function updateProgress() {
      const answered = Object.values(answers).filter(a => a !== null).length;
      answeredCountEl.textContent = answered;
      progressBar.style.width = `${(answered / totalItems) * 100}%`;
      
      // Enable submit when all answered
      if (answered === totalItems) {
        submitBtn.disabled = false;
        submitHint.textContent = 'Ready to see your results!';
        submitHint.className = 'text-center text-cyan-400 text-sm mt-2';
      } else {
        submitBtn.disabled = true;
        const remaining = totalItems - answered;
        submitHint.textContent = `${remaining} question${remaining === 1 ? '' : 's'} remaining`;
        submitHint.className = 'text-center text-paper-200/50 text-sm mt-2';
      }
    }

    // Handle form submission
    const form = document.getElementById('assessment-form');
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const yesItems = [];
      const noItems = [];
      let earnedWeight = 0;
      
      // Get all item weights
      const itemWeights = {};
      checklist.forEach(cat => cat.items.forEach(item => itemWeights[item.id] = item.weight));
      
      Object.entries(answers).forEach(([itemId, answer]) => {
        const weight = itemWeights[itemId];
        if (answer === 'yes') {
          yesItems.push(itemId);
          earnedWeight += weight;
        } else {
          noItems.push({ id: itemId, weight });
        }
      });
      
      // Sort no items by weight (highest first) - these are the gaps
      noItems.sort((a, b) => b.weight - a.weight);
      
      // Store in sessionStorage and redirect
      sessionStorage.setItem('assessment-results', JSON.stringify({
        trade: tradeId,
        checked: yesItems,
        unchecked: noItems.map(u => u.id),
        earnedWeight,
        totalWeight,
        totalItems,
        checkedCount: yesItems.length
      }));
      
      window.location.href = '/results';
    });

    // Initialize
    renderChecklist();
  </script>
</Layout>
