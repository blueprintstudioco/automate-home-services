---
import Layout from '../../layouts/Layout.astro';
import fs from 'node:fs';
import path from 'node:path';

// Get all guide files
const guidesDir = path.join(process.cwd(), 'src/data/guides');
const guideFiles = fs.readdirSync(guidesDir).filter(f => f.endsWith('.json'));

export function getStaticPaths() {
  const guidesDir = path.join(process.cwd(), 'src/data/guides');
  const guideFiles = fs.readdirSync(guidesDir).filter(f => f.endsWith('.json'));
  
  return guideFiles.map((file) => {
    const slug = file.replace('.json', '');
    const guide = JSON.parse(fs.readFileSync(path.join(guidesDir, file), 'utf-8'));
    return {
      params: { slug },
      props: { guide, slug }
    };
  });
}

const { guide, slug } = Astro.props;

const difficultyColors = {
  'Easy': 'bg-green-500/20 text-green-400 border-green-500/30',
  'Medium': 'bg-yellow-500/20 text-yellow-400 border-yellow-500/30',
  'Advanced': 'bg-red-500/20 text-red-400 border-red-500/30'
};

const costColors = {
  'Free': 'bg-green-500/20 text-green-400',
  'Freemium': 'bg-blue-500/20 text-blue-400',
  'Paid': 'bg-orange-500/20 text-orange-400'
};
---

<Layout title={`${guide.title} | Setup Guide`} description={guide.description}>
  <main class="max-w-3xl mx-auto px-6 py-12">
    
    <!-- Back Link -->
    <a href="/" class="inline-flex items-center text-slate-400 hover:text-white mb-8 transition-colors">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Automations
    </a>

    <!-- Header -->
    <div class="mb-8">
      <div class="flex flex-wrap gap-3 mb-4">
        <span class={`text-sm px-3 py-1 rounded-full border ${difficultyColors[guide.difficulty]}`}>
          {guide.difficulty}
        </span>
        <span class={`text-sm px-3 py-1 rounded-full ${costColors[guide.costType]}`}>
          {guide.cost}
        </span>
        <span class="text-sm px-3 py-1 rounded-full bg-slate-800 text-slate-300">
          ‚è±Ô∏è {guide.time}
        </span>
      </div>
      
      <h1 class="text-3xl md:text-4xl font-extrabold mb-4">
        {guide.title}
      </h1>
      <p class="text-xl text-slate-400">
        {guide.description}
      </p>
    </div>

    <!-- What You'll Need -->
    <div class="bg-slate-900 border border-slate-800 rounded-xl p-6 mb-8">
      <h2 class="font-semibold text-lg mb-4 flex items-center gap-2">
        <span>üìã</span> What You'll Need
      </h2>
      <ul class="space-y-2">
        {guide.requirements.map((req) => (
          <li class="flex items-center gap-3 text-slate-300">
            <span class="text-green-500">‚úì</span>
            {req}
          </li>
        ))}
      </ul>
    </div>

    <!-- Steps -->
    <div class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Steps</h2>
      
      <div class="space-y-6">
        {guide.steps.map((step, index) => (
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-10 h-10 bg-orange-500 rounded-full flex items-center justify-center font-bold text-lg">
              {index + 1}
            </div>
            <div class="flex-1 pt-1">
              <h3 class="font-semibold text-lg mb-2">{step.title}</h3>
              <p class="text-slate-400 mb-3">{step.description}</p>
              {step.substeps && (
                <ul class="space-y-2 ml-4">
                  {step.substeps.map((sub) => (
                    <li class="text-slate-400 flex items-start gap-2">
                      <span class="text-orange-500 mt-1">‚Üí</span>
                      {sub}
                    </li>
                  ))}
                </ul>
              )}
              {step.tip && (
                <div class="mt-3 bg-blue-500/10 border border-blue-500/20 rounded-lg p-3 text-sm text-blue-300">
                  üí° <strong>Tip:</strong> {step.tip}
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Success -->
    <div class="bg-green-500/10 border border-green-500/20 rounded-xl p-6 mb-8">
      <h2 class="font-semibold text-lg mb-2 text-green-400 flex items-center gap-2">
        <span>‚úÖ</span> You're Done!
      </h2>
      <p class="text-slate-300">{guide.successMessage}</p>
    </div>

    <!-- Pro Tips -->
    {guide.proTips && guide.proTips.length > 0 && (
      <div class="bg-slate-900 border border-slate-800 rounded-xl p-6 mb-8">
        <h2 class="font-semibold text-lg mb-4 flex items-center gap-2">
          <span>üí°</span> Pro Tips
        </h2>
        <ul class="space-y-3">
          {guide.proTips.map((tip) => (
            <li class="text-slate-300 flex items-start gap-3">
              <span class="text-orange-500">‚Ä¢</span>
              {tip}
            </li>
          ))}
        </ul>
      </div>
    )}

    <!-- Share -->
    <div class="text-center pt-8 border-t border-slate-800">
      <p class="text-slate-500">
        Found this helpful? 
        <button 
          onclick={`navigator.share ? navigator.share({title: '${guide.title}', url: window.location.href}) : navigator.clipboard.writeText(window.location.href).then(() => alert('Link copied!'))`}
          class="text-orange-500 hover:underline"
        >
          Share this guide
        </button>
      </p>
    </div>

  </main>
</Layout>
